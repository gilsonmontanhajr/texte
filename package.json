{
  "name": "texte",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "prebuild:electron": "npm run build && mkdir -p .next/standalone/public && cp -r public/* .next/standalone/public && mkdir -p .next/standalone/.next/static && cp -r .next/static/* .next/standalone/.next/static",
    "dist": "npm run prebuild:electron && electron-builder"
  },
  "build": {
    "appId": "com.texte.app",
    "productName": "Texte",
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@blocknote/core": "^0.46.2",
    "@blocknote/mantine": "^0.46.2",
    "@blocknote/react": "^0.46.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@mantine/core": "^8.3.14",
    "@mantine/hooks": "^8.3.14",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.94.0",
    "@tailwindcss/postcss": "^4",
    "@y-presence/client": "^2.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^3.6.0",
    "file-saver": "^2.0.5",
    "html-docx-js-typescript": "^0.1.5",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-day-picker": "^8.10.1",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "y-protocols": "^1.0.7",
    "yjs": "^13.6.29",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tw-animate-css": "^1.4.0",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "react-day-picker": {
      "react": "$react"
    }
  }
}